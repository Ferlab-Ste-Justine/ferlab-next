{
  "compilerOptions": {
    "sourceMap": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "incremental": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "outDir": "lib",
    "baseUrl": ".",
    "paths": {
      "#src/*": ["src/*"]
    },
    "types": ["node", "jest"],
    "lib": ["ESNext"]
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  },
  "include": ["src/**/*.*"],
  "exclude": ["**/*.test.ts"]
}